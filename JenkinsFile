pipeline {
    agent any

    tools {
        // Install the Maven version configured as "M3" and add it to the path.
        maven "Maven_Home"
    }
    
    options {
        timestamps()
        
        skipDefaultCheckout()        
    }

    stages {
        stage('Checkout') {
            steps {
                echo "Checkout from Git Master Branch"
                checkout scm
            }
        }

        stage('Compile') {
            steps {
                echo "Compile the code"
                bat "mvn clean compile"
            }
        }
        
        stage('Package') {
        		steps {
                echo "Build the code"
                bat "mvn package"
            }
        }
        
        stage('Test Cases') {
        		steps {
                echo "Run Test Cases"
                bat "mvn test"
            }
        }
        
        stage('Sonar Analysis') {
        		steps {
                		withSonarQubeEnv("SonarQubeDefault") {
                			echo "Sonar Analysis"
                			bat "mvn sonar:sonar"
                		}
            }
        }
        
        
            
            
        }
        
}
